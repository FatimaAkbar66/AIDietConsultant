<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_lavender"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us about you"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/deep_violet"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:hint="Full Name"
        android:background="@drawable/edittext_bg"
        android:paddingStart="20dp"
        android:elevation="2dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="15dp"
                  android:weightSum="2">

        <EditText android:id="@+id/etAge"
                  android:layout_width="0dp"
                  android:layout_height="55dp"
                  android:layout_weight="1"
                  android:hint="Age"
                  android:inputType="number"
                  android:background="@drawable/edittext_bg"
                  android:paddingStart="20dp"
                  android:layout_marginEnd="5dp"/>

        <Spinner android:id="@+id/spinnerGender"
                 android:layout_width="0dp"
                 android:layout_height="55dp"
                 android:layout_weight="1"
                 android:background="@drawable/edittext_bg"
                 android:layout_marginStart="5dp"/>
    </LinearLayout>

    <EditText android:id="@+id/etHeight"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:layout_marginTop="15dp"
              android:hint="Height (cm)"
              android:inputType="number"
              android:background="@drawable/edittext_bg"
              android:paddingStart="20dp"/>

    <EditText android:id="@+id/etWeight"
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:layout_marginTop="15dp"
              android:hint="Weight (kg)"
              android:inputType="number"
              android:background="@drawable/edittext_bg"
              android:paddingStart="20dp"/>

</LinearLayout>